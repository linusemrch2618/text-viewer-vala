{
    "app-id" : "com.linusemrch2618.TextViewer",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "42",
    "sdk" : "org.gnome.Sdk",
    "command" : "text-viewer",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "text-viewer",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts": [
                "-Dflatpak=true",
                "-Ddistributor_name=text-viewer",
                "-Ddistributor_version=main"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/linusemrch2618/text-viewer-vala.git"
                }
            ]
        }
    ]
}
